%==========TITLE=========================
\newcommand*{\titleGM}{\begingroup % Create the command for including the title page in the document
\hbox{ % Horizontal box
\hspace*{0.05\textwidth} % Whitespace to the left of the title page
\rule{1pt}{\textheight} % Vertical line
\hspace*{0.05\textwidth} % Whitespace between the vertical line and title page text
\parbox[b]{0.8\textwidth}{ % Paragraph box which restricts text to less than the width of the page

{\noindent\huge\bfseries \documenttitle - \subtitle}\\[1\baselineskip] % Title
{\Large \textit{\documentdesc}}\\[1\baselineskip] % Tagline or further description
{\Large \textsc{\authors}}\\[1\baselineskip]
{\large \textsc{\textit{Instructor: \dozent}}}\\[\baselineskip]
{\large \textsc{\textit{\subauthors}}}\\[3\baselineskip] % Author name
\titleimg\\
\vspace{.05\textheight} % Whitespace between the title block and the publisher


{\noindent \revisiondate, \ort}\\[2\baselineskip] 
}}
\endgroup}
%========================================

%============SUBTITLE?======================
\newcommand*{\subtitleGM}[1]{
\begingroup
\hbox{
\hspace*{0.25\textwidth}
\parbox[b]{0.75\textwidth}{
	\vspace*{0.4\textheight}
	{\noindent\huge\bfseries #1}\\[\baselineskip]
	{\large \textit{\documenttitle - \authors}}\\
	\noindent\rule{3cm}{0.4pt}\\[2\baselineskip]
}
}\endgroup}
%========================================
\newcommand{\subtitlepage}[1]{\begingroup
	\clearpage
	\thispagestyle{empty}
	\subtitleGM{#1}
	\clearpage
	\thispagestyle{fancy}
\endgroup}
%========================================

%==========HEADER & FOOTER===============
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}
\lhead{\documenttitle - \subtitle}
\rhead{\revisiondate}
\fancyfoot[R]{\thepage}
\fancyfoot[L]{\authors}
